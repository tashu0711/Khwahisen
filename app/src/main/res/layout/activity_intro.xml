<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".IntroActivity">


    <Button
        android:id="@+id/btn_donate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:background="@drawable/borback"
        android:text="Donate"
        android:elevation="3dp"
        android:clickable="true"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/introacctivitybtn_help"
        app:layout_constraintEnd_toEndOf="@+id/introacctivitybtn_help"
        app:layout_constraintStart_toStartOf="@+id/introacctivitybtn_help" />

    <Button
        android:id="@+id/introacctivitybtn_help"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="32dp"
        android:elevation="3dp"
        android:clickable="true"
        android:background="@drawable/borback"
        android:text="Help"
        android:textColor="@color/black"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <com.denzcoskun.imageslider.ImageSlider
        android:id="@+id/intro_slider"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        app:iss_auto_cycle="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

    </com.denzcoskun.imageslider.ImageSlider>
</androidx.constraintlayout.widget.ConstraintLayout>