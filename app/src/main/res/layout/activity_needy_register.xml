<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NeedyRegisterActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_gravity="center
"
                app:srcCompat="@drawable/khwahisen_banner" />


            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Registration Form"
                android:textAlignment="center"

                android:textColor="@color/white"
                android:textSize="30dp" />

            <EditText
                android:id="@+id/needy_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:backgroundTint="#FB0707"
                android:background="@drawable/edit_text_bg"
                android:padding="15dp"
                android:layout_marginHorizontal="15dp"
                android:layout_marginTop="20dp"

                android:textColor="@color/white"
                android:textColorHint="#636262"
                android:hint="Student Name:"/>

            <EditText
                android:id="@+id/needyactivity_fn."
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
android:textColorHint="#636262"
                android:textColor="@color/white"
                android:background="@drawable/edit_text_bg"
                android:layout_marginHorizontal="15dp"

                android:padding="15dp"
                android:layout_marginTop="20dp"

                android:ems="10"
                android:hint="Father's Name:"/>

            <EditText
                android:id="@+id/needyactivity_foc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:background="@drawable/edit_text_bg"
                android:padding="15dp"
                android:layout_marginHorizontal="15dp"
                android:backgroundTint="#FB0707"

                android:layout_marginTop="20dp"

                android:textColorHint="#636262"
                android:ems="10"
                android:hint="Father's occupation:"/>

            <EditText
                android:id="@+id/needyactivity_con"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"

                android:layout_marginTop="20dp"
                android:layout_weight="1"
                android:background="@drawable/edit_text_bg"

                android:ems="10"
                android:hint="College Name:"
                android:padding="15dp"

                android:textColor="@color/white"
                android:textColorHint="#636262" />

            <EditText
                android:id="@+id/needyactivity_ron"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:textColor="@color/white"
                android:background="@drawable/edit_text_bg"
                android:padding="15dp"
                android:layout_marginTop="20dp"

                android:layout_marginHorizontal="15dp"

                android:hint="Class with Roll No:"
                android:textColorHint="#636262"/>

            <EditText
                android:id="@+id/needyactivity_contact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:background="@drawable/edit_text_bg"
                android:padding="15dp"
                android:layout_marginHorizontal="15dp"
                android:layout_marginTop="20dp"
                android:backgroundTint="#FB0707"

                android:ems="10"
                android:hint="Contact num(personal/closer):"
                android:textColorHint="#636262" />

            <EditText
                android:id="@+id/needyactivity_help"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:background="@drawable/edit_text_bg"
                android:padding="15dp"
                android:layout_marginHorizontal="15dp"
                android:layout_marginTop="20dp"
                android:backgroundTint="#FB0707"

                android:ems="10"
                android:hint="Help for coaching/books/college/other relative education:"
                android:textColorHint="#636262" />

            <EditText
                android:id="@+id/needyactivity_adress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:textColor="@color/white"
                android:background="@drawable/edit_text_bg"
                android:padding="15dp"
                android:layout_marginHorizontal="15dp"
                android:layout_marginTop="20dp"

                android:hint="Full address:"
                android:textColorHint="#636262"/>

            <EditText
                android:id="@+id/needyactivity_teacher"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:textColor="@color/white"
                android:background="@drawable/edit_text_bg"
                android:padding="15dp"
                android:layout_marginTop="20dp"
                android:backgroundTint="#FB0707"

                android:layout_marginHorizontal="15dp"

                android:hint="Coaching Name/Teacher Name(Contact num):"
                android:textColorHint="#636262"/>

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:srcCompat="@tools:sample/avatars" />

            <Button
                android:id="@+id/button2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text_bg"

                android:text="UPLOAD ADHAR ID" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:srcCompat="@tools:sample/avatars" />

            <Button
                android:id="@+id/button3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="UPLOAD SCHOOL ID/PREVIOUS CLASS MARKSHEET"
                android:background="@drawable/edit_text_bg"
                />

            "/>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>