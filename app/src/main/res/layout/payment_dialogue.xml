<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/payment_dialog_bg"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView6"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="PAYMENT METHOD"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="10dp"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="horizontal">


            <ImageView
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:src="@drawable/all_upi" />

            <TextView
                android:id="@+id/Mainhomeupitext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="6393508356@0kbizaxis"
                android:textColor="#009688"
                android:textSize="20dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="horizontal">


            <ImageView
                android:layout_width="200dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/gpay_logo" />

            <TextView
                android:id="@+id/Mainhomegpay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="6393508356(Ashu Tiwari(IIT)"

                android:textColor="#009688"
                android:textSize="20dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="horizontal">


            <ImageView
                android:layout_width="200dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/ppay_logo" />

            <TextView
                android:id="@+id/Mainhomeppay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"

                android:text="6393508356(Ashu Tiwari(IIT)"
                android:textColor="#009688"
                android:textSize="20dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="horizontal">


            <ImageView
                android:layout_width="200dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/amazonpay_logo" />

            <TextView
                android:id="@+id/MainhomeApay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="6393508356(Ashu Tiwari(IIT)"
                android:textColor="#009688"
                android:textSize="20dp" />

        </LinearLayout>

        <TextView
            android:id="@+id/textView10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="or"
            android:layout_marginBottom="10dp"
            android:textAlignment="center"
            android:textSize="25dp" />

        <Button
            android:id="@+id/Mainhomepaymentbutton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/donate_btn_bg"
            android:backgroundTint="#3F51B5"
            android:text="Pay with other UPI"
            android:textColor="#070707"
            android:textSize="20sp" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
